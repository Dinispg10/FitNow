<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#141B2D"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Card principal -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="32dp"
        android:background="@drawable/login_card_bg"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:elevation="8dp">

        <!-- Logo e nome -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FitNow"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- Título, subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bem-vindo de volta"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organize e acompanhe seus treinos"
            android:textColor="#89A4B7"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"/>


        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#232842"
            android:textColor="#FFFFFF"
            android:hint="E-mail"
            android:textColorHint="#89A4B7"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#232842"
            android:textColor="#FFFFFF"
            android:textColorHint="#89A4B7"
            android:hint="Password"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Botão Entrar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Entrar"
            android:backgroundTint="#24D1B5"
            android:textColor="#141B2D"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
                android:id="@+id/btnForgotPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Entrar"
                android:backgroundTint="#24D1B5"
                android:textColor="#141B2D"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

        <!-- Nova conta -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Criar nova conta"
            android:textColor="#24D1B5"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>


    </LinearLayout>
</LinearLayout>
